@model IEnumerable<CategoriaModel>
<partial name="_Mensagem"></partial>
<a asp-action="Cadastrar" class="btn btn-primary">Cadastrar</a>

    @if (Model.Count() > 0)
{
    <table class="table table-spacing tabela-categorias">
        <thead>
            <tr>
                <th class="p-1">Nome</th>
                <th class="p-1">Ações</th>
            </tr>
        </thead>
        <tbody class="p-1">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="p-1">@item.Nome</td>
                    <td class="p-1">
                        <a asp-action="Cadastrar" asp-route-id="@item.IdCategoria" class="btn btn-sm btn-secondary">Alterar</a>
                        <a asp-action="Excluir" asp-route-id="@item.IdCategoria" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1>Não a valor na tabela</h1>
}