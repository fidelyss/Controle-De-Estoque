@model ProdutoModel
@{
    ViewBag.Subtitulo = "Exclusão de Produto";
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>
<form asp-action="Excluir" method="post" class="row">
    <input type="hidden" asp-for="@Model.IdProduto">
    <h1>Deseja mesmo excluir o produto @Model.Nome ?</h1>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Não</a>
        <button class="btn btn-primary" type="submit">Sim</button>
    </div>
</form>