@model IEnumerable<ProdutoModel>
<partial name="_Mensagem"></partial>
<a asp-action="Cadastrar" asp-controller="Produto" class="btn btn-primary">Cadastrar</a>

@if (Model.Count() > 0)
{
    <table class="table table-striped tabela-produtos">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Categoria</th>
                <th>Estoque</th>
                <th>Preco</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Categoria?.Nome</td>
                    <td>@item.Estoque.ToString("D4")</td>
                    <td>@item.Preco.ToString("C")</td>
                    <td>
                        <a asp-action="Cadastrar" asp-route-id="@item.IdProduto" class="btn btn-sm btn-secondary">Alterar</a>
                        <a asp-action="Excluir" asp-route-id="@item.IdProduto" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1>Não a valor na tabela</h1>
}