@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var name = ViewContext.RouteData.Values["controller"].ToString();
}
<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.css">
    <link rel="stylesheet" href="/css/estilos.css">

    <title>Document</title>
    <style>
        .active {
            color: blue
        }
        .active:hover {
            color: red;
        }
    </style>
</head>

<body>
    <nav
        style="display: flex; height: fit-content; padding: 10px; background-color: black; justify-content: space-between;" class="bg-dark p-3  ">
        <div></div>
        <div style="display: flex;">
            <a asp-action="Index" asp-controller="Home"
                style="text-decoration: none; color:@(@name == "Home" ? "":"white"); padding-left: 10px;"
                class="@(@name == "Home" ? "active":"")">Home</a>
            <a asp-action="Index" asp-controller="Categoria"
                style="text-decoration: none; color:@(@name == "Categoria" ? "":"white"); padding-left: 10px;"
                class="@(@name == "Categoria" ? "active":"")">Categorias</a>
            <a asp-action="Index" asp-controller="Produto"
                style="text-decoration: none; color:@(@name == "Produto" ? "":"white"); padding-left: 10px;"
                class="@(@name == "Produto" ? "active":"")">Produtos</a>
        </div>
    </nav>
    <div class="container mt-2">
        @RenderBody()
    </div>
    <div class="text-light bg-dark p-3 fixed-bottom text-center">
        EstoqueWeb&copy; @DateTime.Now.Year.ToString()<br>
        Todos os direitos reservados
    </div>

    <script src="/lib/bootstrap5/dist/js/bootstrap.js"></script>

</body>

</html>